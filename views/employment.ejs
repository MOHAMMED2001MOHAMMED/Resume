    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h6>
                            <%= employment.Department %>
                        </h6>
                        <p class="proile-rating"> <span><%= employment.Specialization %></span></p>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Timeline</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-work">
                        <p style="font-size: 19px; color: #495057;">languges</p>
                        <% for(let i of  employment.languges) {%>
                            <a href="">
                                <%= i %>
                            </a><br/>
                            <% } %>
                                <p style="font-size: 19px; color: #495057;">SKILLS</p>
                                <% for(let i of  employment.Skills) {%>
                                    <a href="">
                                        <%= i %>
                                    </a><br/>
                                    <% } %>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Degree</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%= employment.degree %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Gender</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%= employment.Gender %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nationality</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%= employment.Nationality %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Age</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%= employment.Age %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Campus</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%= employment.Campus %>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Employee time</label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%= employment.employeetime %>
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <h2>Experience</h2>

                <table class="table table-striped">
                    <tr>
                        <th scope="col">Experience</th>

                    </tr>
                    <tr>
                        <% for(let i of employment.Experience) {%>
                            <td>
                                <%= i %>
                            </td>

                    </tr>
                    <% } %>

                </table>
            </div>
        </form>
    </div>

</body>

</html>